<atlassian-plugin key="com.atlassian.labs.bamboo.git" name="git-plugin">
    <plugin-info>
        <description>Bamboo bgit plugin</description>
        <version>${project.version}</version>
    </plugin-info>


    <repository key="git" name="Git Repository"
                     class="com.atlassian.labs.bamboo.git.GitRepository">
    <description>A Git Repository</description>
    <resource type="freemarker" name="edit" location="gitRepositoryEdit.ftl"/>
    <resource type="freemarker" name="view" location="gitRepositoryView.ftl"/>
  </repository>

</atlassian-plugin>
